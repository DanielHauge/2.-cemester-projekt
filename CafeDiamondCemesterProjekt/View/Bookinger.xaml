<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ViewModel="clr-namespace:CafeDiamondCemesterProjekt.ViewModel" x:Class="CafeDiamondCemesterProjekt.View.Bookinger" 
      mc:Ignorable="d" 
      d:DesignHeight="494" d:DesignWidth="745"
	Title="Page1">
    <Page.Background>
        <ImageBrush ImageSource="/CafeDiamondCemesterProjekt;component/Assets/background1.png"/>
    </Page.Background>

    <Grid>

        <Calendar HorizontalAlignment="Left" Margin="166,10,0,0" VerticalAlignment="Top" Height="159" Width="204" Background="#FFF90000"/>
        <ListView HorizontalAlignment="Left" Height="446" Margin="370,0,0,10" VerticalAlignment="Bottom" Width="365" Background="#FF011C95" Opacity="0.9">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView HorizontalAlignment="Left" Height="276" Margin="181,208,0,0" VerticalAlignment="Top" Width="174" SelectionChanged="ListView_SelectionChanged" Background="#FFDEC8C7">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Grid HorizontalAlignment="Left" Height="479" VerticalAlignment="Top" Width="166" Background="#FF0A0301" Opacity="0.6" Margin="0,5,0,0">
            <Grid.DataContext>
                <ViewModel:Viewmodel/>
            </Grid.DataContext>
            <Button HorizontalAlignment="Left" Margin="10,135,0,0" VerticalAlignment="Top" Width="129" Height="34" Click="Button_Click" Foreground="#FF150101" Content="Tilføj Booking" Command="{Binding TilføjBooking, Mode=OneWay}"/>
            <Button Content="Tjek Kunde" HorizontalAlignment="Left" Margin="10,97,0,0" VerticalAlignment="Top" Width="129" Height="33"/>
            <TextBox HorizontalAlignment="Left" Height="23" Margin="10,12,0,0" TextWrapping="Wrap" Text="Kunde ID" VerticalAlignment="Top" Width="129"/>
            <TextBox HorizontalAlignment="Left" Height="23" Margin="10,40,0,0" TextWrapping="Wrap" Text="Bord" VerticalAlignment="Top" Width="129"/>
            <DatePicker HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top" Width="129"/>
        </Grid>
        <Button Content="Rediger Booking" HorizontalAlignment="Left" Margin="181,174,0,0" VerticalAlignment="Top" Width="174" Height="29"/>
        <Button Content="Vis Alle Kunder" HorizontalAlignment="Left" Margin="370,9,0,0" VerticalAlignment="Top" Width="365"/>
    </Grid>
</Page>
